<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:background="#657C7C">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_FirstQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/ic_rounded_rectangle_for_questions"
            android:gravity="center"
            android:padding="10dp"
            android:text="Попав в аэропорт Фьюмичино имени Леонардо да Винчи в городе Рим, ты оказываешь на равном расстоянии от всех столичных аэропортов мира."
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/rg_First"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_FirstQuestion"
            app:layout_constraintEnd_toEndOf="@+id/tv_FirstQuestion"
            app:layout_constraintStart_toStartOf="@+id/tv_FirstQuestion">

            <RadioButton
                android:id="@+id/rb_FirstTrue"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:text="Правда"
                />

            <RadioButton
                android:id="@+id/rb_FirstFalse"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:text="Неправда" />
        </RadioGroup>

        <TextView
            android:id="@+id/tv_SecondQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/ic_rounded_rectangle_for_questions"
            android:gravity="center"
            android:padding="10dp"
            android:text="Белое море одновременно является самым теплым и самым холодным."
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/rg_First"
            app:layout_constraintStart_toStartOf="@id/rg_First"
            app:layout_constraintTop_toBottomOf="@id/rg_First" />

        <RadioGroup
            android:id="@+id/rg_Second"
