            android:padding="10dp"
            android:text="Последний активный вулкан на планете погас в 2010 году."
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/rg_Second"
            app:layout_constraintStart_toStartOf="@id/rg_Second"
